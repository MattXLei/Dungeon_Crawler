<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="660dp"
        android:text="*Placeholder Name*"
        app:layout_constraintBottom_toTopOf="@+id/healthText"
        app:layout_constraintEnd_toStartOf="@+id/difficultyText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/difficultyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="109dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="626dp"
        android:text="*Placeholder Difficulty*"
        app:layout_constraintBottom_toTopOf="@+id/endScreenButton"
        app:layout_constraintStart_toEndOf="@+id/nameText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/healthText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health:"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="695dp" />

    <Button
        android:id="@+id/endScreenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To End"
        tools:layout_editor_absoluteX="298dp"
        tools:layout_editor_absoluteY="661dp" />

    <ImageView
        android:id="@+id/knightSprite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/knight"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="333dp" />

    <ImageView
        android:id="@+id/mageSprite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mage"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="261dp" />

    <ImageView
        android:id="@+id/necroSprite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/necromancer"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="410dp" />
</androidx.constraintlayout.widget.ConstraintLayout>