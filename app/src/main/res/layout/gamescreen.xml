<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Placeholder Name*"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/difficultyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Placeholder Difficulty*"
        tools:layout_editor_absoluteX="251dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/healthText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health:"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="695dp" />

    <Button
        android:id="@+id/endScreenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To End"
        tools:layout_editor_absoluteX="298dp"
        tools:layout_editor_absoluteY="661dp" />

    <ImageView
        android:id="@+id/knightSprite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/Knight"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="333dp" />

    <ImageView
        android:id="@+id/mageSprite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/Mage"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="261dp" />

    <ImageView
        android:id="@+id/necroSprite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/Necomancer"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="410dp" />
</androidx.constraintlayout.widget.ConstraintLayout>